module scorer(green_in, red_in, stop_game, incr);

	input logic [15:0] green_in, red_in;
	output logic stop_game, incr;
	
	integer i;
	
	always_ff @(posedge clk) begin
		for (i = 0; i < 16; i++) begin
			if (green_in[i] & red_in[i])
				stop_game <= 1;
		end
		if (red_in == 0)
			stop_game <= 1;
		else if (green_in[15] == 1)
			incr <= 1;
		else
			incr <= 0;
			stop_game <= 0;
	end

endmodule 